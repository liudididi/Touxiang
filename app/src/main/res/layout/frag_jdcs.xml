<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:scrollbars="none"
    >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_fltitle"
            />
    </LinearLayout>
    <ImageView
        android:layout_below="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_jiazai"
        android:src="@drawable/jiazai"
        android:scaleType="centerCrop"
        />
    <TextView
        android:textColor="#663399"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recy_tv1"
        android:text="悠闲零食"
        android:textSize="12sp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/img_jiazai"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recy_tv1"
        android:id="@+id/recy1"
        >
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:textColor="#663399"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recy_tv2"
        android:text="悠闲零食"
        android:layout_below="@+id/recy1"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recy_tv2"
        android:id="@+id/recy2"
        >
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:textColor="#663399"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recy_tv3"
        android:text="悠闲零食"
        android:layout_below="@+id/recy2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recy_tv3"
        android:id="@+id/recy3"
        >
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_marginTop="6dp"
        android:textColor="#663399"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recy_tv4"
        android:text="悠闲零食"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/recy3"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recy_tv4"
        android:id="@+id/recy4"
        >
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
</ScrollView>