<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F5F7"
    >
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sy_title"
        android:weightSum="8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:id="@+id/sy_saoyisao"
        android:gravity="center"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/sys"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fl_sousuo"
        android:gravity="center"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="6"
        >
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:id="@+id/sy_edsou"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/ed_bgf"
            android:paddingLeft="10dp"
            android:paddingTop="2dp" >
            <ImageView
                android:layout_marginLeft="-6dp"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:src="@drawable/sousuo"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:text="搜你想搜"
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                />
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:src="@drawable/people" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sy_xiaoxi"
        android:gravity="center"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:src="@drawable/xiaoxif"/>
    </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/tools_scrlllview"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:layout_below="@+id/sy_title">
    <LinearLayout
        android:background="@color/qjbg"
        android:id="@+id/tools_linear"
        android:layout_below="@+id/sy_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        >
    </LinearLayout>
    </ScrollView>
    <model.Myviewpager
        android:id="@+id/tools_viewpager"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/tools_scrlllview"
        android:layout_below="@+id/sy_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </model.Myviewpager>
</RelativeLayout>