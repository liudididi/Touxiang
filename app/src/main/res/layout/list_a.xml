<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:src="@drawable/index"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:id="@+id/img_tu"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
    <TextView
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="美的共空"
        android:id="@+id/tv_title"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_tu"
        android:layout_toEndOf="@+id/img_tu" />
    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/tv_price"
        android:textSize="20sp"
        android:textColor="#f00"
        android:text="239.00"
        android:layout_below="@+id/tv_title"
        android:layout_toRightOf="@+id/img_tu"
        android:layout_toEndOf="@+id/img_tu" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/tv_ping"
        android:text="115841条评论 97%的好评"
        android:gravity="left"
        android:paddingTop="5dp"
        android:layout_below="@+id/tv_price"
        android:layout_alignLeft="@+id/tv_price"
        android:layout_alignStart="@+id/tv_price" />
</RelativeLayout>